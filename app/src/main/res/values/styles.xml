<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="styleDrawerTextSize">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <!--Accept request button style-->
    <style name="customButtonAcceptRequest">
        <item name="android:background">@drawable/drawable_circle_green</item>
        <item name="android:src">@drawable/ic_done_white</item>
    </style>

    <!--Reject request button style-->
    <style name="customButtonRejectRequest">
        <item name="android:background">@drawable/drawable_circle_red</item>
        <item name="android:src">@drawable/ic_close_white_24dp</item>
    </style>
</resources>
